{
  "name": "follow-coin-bot",
  "version": "0.4.2",
  "description": "Telegram bot for cryptocurrency tracking with Long List and Hot List functionality and 24h mints",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run build && node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health": "curl http://localhost:3000/health || echo 'Health check endpoint not available'",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js --env production",
    "pm2:reload": "pm2 reload ecosystem.config.js --env production",
    "pm2:logs": "pm2 logs follow-coin-bot",
    "pm2:monit": "pm2 monit",
    "pm2:startup": "pm2 startup",
    "pm2:resurrect": "pm2 resurrect",
    "pm2:flush": "pm2 flush",
    "pm2:reloadLogs": "pm2 reloadLogs",
    "pm2:scale": "pm2 scale ecosystem.config.js",
    "pm2:install": "npm install -g pm2",
    "pm2:setup": "npm run pm2:install && npm run pm2:startup",
    "deploy": "npm run build && npm run pm2:reload",
    "deploy:full": "npm run build && npm run pm2:delete && npm run pm2:start",
    "backup": "./scripts/backup.sh create",
    "backup:list": "./scripts/backup.sh list",
    "backup:cleanup": "./scripts/backup.sh cleanup",
    "monitor:start": "./scripts/monitor.sh start",
    "monitor:stop": "./scripts/monitor.sh stop",
    "monitor:status": "./scripts/monitor.sh status"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "telegraf": "^4.16.3",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^6.14.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "cryptocurrency",
    "tracking",
    "dexscreener",
    "solana"
  ],
  "author": "",
  "license": "MIT"
}
